<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/header_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/sf_pro_rounded_bold"
        android:text="All friends"
        android:textColor="@color/colorTextPrimary"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/header_count_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_centerVertical="false"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@+id/header_text_view"
        android:fontFamily="@font/sf_pro_rounded_medium"
        android:text="1424"
        android:textColor="@color/colorTextSecondary"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/header_sort_type_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_text_view"
        android:layout_alignParentEnd="false"
        android:layout_marginStart="12dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/sf_pro_rounded_semibold"
        android:text="Сортировка:"
        android:textColor="@color/colorTextPrimary"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/header_sort_type_description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_text_view"
        android:layout_alignParentEnd="false"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp"
        android:layout_toEndOf="@+id/header_sort_type_text_view"
        android:fontFamily="@font/sf_pro_rounded_medium"
        android:text="По умолчанию"
        android:textColor="@color/colorTextSecondary"
        android:textSize="16sp" />
</RelativeLayout>